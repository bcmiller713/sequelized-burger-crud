<img src="/assets/images/burger-icon.png" alt="burger">

<h1>Burger Time!</h1>

<div id="not-eaten-list">
    <h2>These burgers are ready to be eaten...</h2>
	<ol>
		{{#each burgers}}
    		{{#unless this.devoured}}
      			<li>
        			{{this.burger_name}}
        			<form action="/{{this.id}}?_method=PUT" method="POST">
        				<input type="hidden" name="devoured" value="true">
						<button type="submit" class="eat-button">Eat da burger!</button>
        			</form>
        		</li>
        	{{/unless}}
        {{/each}}
	</ol>
</div>

<div id="eaten-list">
    <h2>These burgers have already been eaten...</h2>
	<ol>
		{{#each burgers}}
    		{{#if this.devoured}}
      			<li>
        			{{this.burger_name}}
        		</li>
        	{{/if}}
        {{/each}}
	</ol>
</div>

<div id="form-area">
    <form id="add-burger-form" action="/" method="POST">
        <input type="text" id="burger-name" name="name">
        <button type="submit" id="burger-submit">Submit</button>
    </form>
    <p>Enter a burger you would like to eat and click the "Submit" button.</p>  
</div>
